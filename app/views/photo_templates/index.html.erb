<h1>List of photos</h1>

<hr>

<form action="/add_photo">

<label for="image">Image</label>
<input id="image" type="text" name="query_image_url" placeholder="Enter a URL for the image...">

<label for="caption">Caption</label>
<textarea id="caption" type="text" name="query_photo_caption" placeholder="Enter a caption for the photo..."></textarea>

<label for="user_id">Owner ID</label>
<input id="user_id" type="text" name="query_owner_id" placeholder="Enter an ID of a user">

<button>Add photo</button>
</form>

<hr>

<table border="1">
<tbody>
<tr>
<th>Image</th>
<th>Caption</th>
<th>Owner</th>
<th>Posted</th>
<th></th>
</tr>

<% @list_of_photos.each do |a_photo| %>
<tr>
<td><img src="<%= a_photo.image %>"></td>
<td><%= a_photo.caption %></td>
<td><%= a_photo.poster.username %></td>
<td><%= a_photo.created_at %></td>
<td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
</tr>

<% end %>



</tbody>



</table>
